---
interface Props {
    footerText: string;
}

const { footerText } = Astro.props;
---

<div>
    <p>{footerText}</p>
</div>

<style lang="scss">
    div {
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1rem;
        padding: 20px 40px;
        background: transparent !important;
        display: flex;
        z-index: 100;
        border-top: 1px solid rgba(255, 255, 255, 0.16);
        text-align: center;
        align-items: center;
        justify-content: center;

        p {
            font-size: 12px;
            font-weight: 700;
            color: gray;
            text-decoration: none;
        }
    }
</style>
