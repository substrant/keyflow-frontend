---
interface Props {
    image: string;
    title: string;
    body: string;
}

const { image, title, body } = Astro.props;
---

<li class="info-card">
    <a>
        <img src={image} />
        <h2>
            {title}
        </h2>
        <p>
            {body}
        </p>
    </a>
</li>
<style>
    .info-card {
        list-style: none;
        display: flex;
        padding: 1px;
        background-color: rgba(45, 45, 45, 1);
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;
        width: 100%;
        position: relative;
        overflow: hidden;
    }
    .info-card > a {
        width: 100%;
        background-color: #0a0a1a;
        text-decoration: none;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        color: white;
        opacity: 0.8;
    }

    .info-card::before {
        content: "";
        display: flex;
        justify-content: left;
        align-items:flex-start;
        position: absolute;
        background-position: 0;
        background: radial-gradient(#7274cb67, transparent);
        width: calc(100% + 500px);
        height: calc(100% + 500px);

    }

    h2 {
        margin: 0;
        font-size: 1.25rem;
        text-align: center;
    }
    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
        text-align: center;
    }
    img {
        width: 100%;
        height: 50%;
        object-fit: cover;
        margin-bottom: 0.5rem;
    }
</style>
